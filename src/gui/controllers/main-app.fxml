<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="parentPane" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="gui.controllers.ProvisionalController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <TilePane fx:id="datePickerPane" prefHeight="72.0" prefWidth="266.0" GridPane.columnIndex="2"
                  GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                  GridPane.rowIndex="2" GridPane.rowSpan="2147483647" GridPane.valignment="CENTER"
                  GridPane.vgrow="ALWAYS">
            <children>
                <DatePicker fx:id="datePicker">
                    <TilePane.margin>
                        <Insets/>
                    </TilePane.margin>
                </DatePicker>
                <Label fx:id="datePickerLabel" text="Pick a date"/>
                <HBox fillHeight="false" prefHeight="24.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Button fx:id="previousDateButton" mnemonicParsing="false" onAction="#previousDateButtonClicked"
                                text="Previous"/>
                        <Button fx:id="nextDateButton" mnemonicParsing="false" onAction="#nextDateButtonClicked"
                                text="Next">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <TilePane.margin>
                        <Insets left="50.0" right="5.0" top="5.0"/>
                    </TilePane.margin>
                    <padding>
                        <Insets left="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </TilePane>
        <TilePane fx:id="buttonPane" hgap="30.0" prefHeight="200.0" prefWidth="200.0" vgap="15.0" GridPane.rowIndex="2">
            <children>
                <Button fx:id="queryButton" mnemonicParsing="false" onAction="#queryButtonClicked"
                        text="Query Database"/>
                <Button fx:id="deriveStatsButton" mnemonicParsing="false" text="Derive Statistics"
                        onAction="#deriveStatsButtonClicked"/>
            </children>
            <padding>
                <Insets top="50.0"/>
            </padding>
            <GridPane.margin>
                <Insets bottom="50.0" left="50.0"/>
            </GridPane.margin>
        </TilePane>
        <BorderPane fx:id="gmrPane" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
            <top>
                <Label fx:id="gmrLabel" style="-fx-font-weight: bold;" text="Google Mobility Report"
                       BorderPane.alignment="CENTER"/>
            </top>
            <padding>
                <Insets top="5.0"/>
            </padding>
            <center>
                <TextFlow fx:id="gmrFlow" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="5.0"/>
                    </BorderPane.margin>
                </TextFlow>
            </center>
        </BorderPane>
        <BorderPane fx:id="generalDisplay" prefHeight="200.0" prefWidth="200.0">
            <top>
                <Label fx:id="generalLabel" style="-fx-font-weight: bold;" text="General Information"
                       BorderPane.alignment="CENTER"/>
            </top>
            <center>
                <TextFlow fx:id="genInfoFlow" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="5.0"/>
                    </BorderPane.margin>
                </TextFlow>
            </center>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </BorderPane>
        <BorderPane fx:id="medPane" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
            <top>
                <Label fx:id="medLabel" style="-fx-font-weight: bold;" text="Medical Statistics"
                       BorderPane.alignment="CENTER">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
            </top>
            <center>
                <TextFlow fx:id="medFlow" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="5.0"/>
                    </BorderPane.margin>
                </TextFlow>
            </center>
        </BorderPane>
        <Button fx:id="previousRecordButton" mnemonicParsing="false" onAction="#previousRecordButtonClicked"
                text="Previous Record" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="50.0"/>
            </GridPane.margin>
        </Button>
        <Button fx:id="nextRecordButton" mnemonicParsing="false" onAction="#nextRecordButtonClicked" text="Next Record"
                GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="70.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
