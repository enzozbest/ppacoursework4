<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21">
    <ImageView fx:id="background" fitHeight="600.0" fitWidth="960.0" pickOnBounds="true" preserveRatio="true"/>
    <BorderPane prefHeight="600.0" prefWidth="960.0">
        <right>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets right="50.0"/>
                </BorderPane.margin>
                <ImageView fx:id="next" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true"
                           preserveRatio="true">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </ImageView>
            </VBox>
        </right>
        <left>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="50.0"/>
                </BorderPane.margin>
                <ImageView fx:id="prev" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true"
                           preserveRatio="true"/>
            </VBox>
        </left>
        <center>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets top="150.0"/>
                </padding>
                <HBox alignment="CENTER">
                    <Label fx:id="title"
                           style="-fx-alignment: center; -fx-font-weight: bold; -fx-font-family: &quot;Retro Gaming&quot;;"
                           text="Test" textAlignment="CENTER">
                        <font>
                            <Font size="30.0"/>
                        </font>
                    </Label>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <Label fx:id="subtitle"
                               style="-fx-alignment: center; -fx-font-family: &quot;Retro Gaming&quot;;"
                               text="Label" textAlignment="CENTER">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox fx:id="statistic_container" alignment="CENTER">
                    <children>
                        <Label fx:id="statistic"
                               text="Label">
                            <font>
                                <Font size="50.0"/>
                            </font>
                            <HBox.margin>
                                <Insets top="25.0"/>
                            </HBox.margin>
                        </Label>
                        <Label text="(2 d.p.)">
                            <font>
                                <Font size="50.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" top="25.0"/>
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
    <Text fx:id="back_text" layoutX="66.0" layoutY="582.0" strokeType="OUTSIDE" strokeWidth="0.0"
          style="-fx-font-family: &quot;Retro Gaming&quot;; -fx-fill: black;" text="Back">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <Text fx:id="forward_text" layoutX="629.0" layoutY="581.0" strokeType="OUTSIDE" strokeWidth="0.0"
          style="-fx-font-family: &quot;Retro Gaming&quot;; -fx-fill: black;" text="Next" textAlignment="RIGHT">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <ImageView fx:id="small_character" fitHeight="264.0" fitWidth="275.0" layoutX="685.0" layoutY="336.0"
               pickOnBounds="true" preserveRatio="true"/>
</AnchorPane>
